<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="theater">
	
	<!-- 도시 이름 가져오기 -->
	<select id="selectCname" resultType="String">
		SELECT DISTINCT CNAME FROM GC_THEATER
	</select>
	
	<!-- 지역 이름 가져오기 -->
	<select id="selectLname" resultType="String" parameterType="String">
		SELECT DISTINCT LNAME FROM GC_THEATER WHERE CNAME = #{cname} ORDER BY LNAME
	</select>
	
	<!-- 영화관에서 상영하는 영화 정보 가져오기 -->
	<select id="selectAll" resultType="com.gaon.cinema.theater.TheaterDTO">
		SELECT * FROM GC_THEATER ORDER BY CNAME, LNAME, TNAME
	</select>
	
	<!-- 도시 영화관에서 상영하는 영화 정보 가져오기 -->
	<select id="selectAllByCname" resultType="com.gaon.cinema.theater.TheaterDTO" parameterType="String">
		SELECT * FROM GC_THEATER WHERE CNAME = #{cname} ORDER BY LNAME, TNAME
	</select>
	
	<!-- 지역 영화관에서 상영하는 영화 정보 가져오기 -->
	<select id="selectAllByLname" resultType="com.gaon.cinema.theater.TheaterDTO" parameterType="String">
		SELECT * FROM GC_THEATER WHERE LNAME = #{lname} ORDER BY TNAME
	</select>
	
</mapper>















