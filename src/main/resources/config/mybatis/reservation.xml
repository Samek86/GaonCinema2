<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="reservation">

	<!-- 영화를 클릭 했을 경우 -->
	<select id="selectCnameOnClickMovie" parameterType="com.gaon.cinema.theater.TheaterDTO" resultType="String">
		SELECT DISTINCT CNAME FROM GC_THEATER WHERE MNAME = #{mname}
	</select>
	
	<select id="selectLnameOnClickMovie" parameterType="com.gaon.cinema.theater.TheaterDTO" resultType="String">
		SELECT DISTINCT LNAME FROM GC_THEATER WHERE MNAME = #{mname} AND CNAME = #{cname}
	</select>
	
	<select id="selectMstarthourOnClickMovie" parameterType="com.gaon.cinema.theater.TheaterDTO" resultType="Date">
		SELECT DISTINCT TO_CHAR(MSTARTHOUR, 'YYYY-MM-DD') MSTARTHOUR FROM GC_THEATER WHERE MNAME = #{mname}
	</select>
	
