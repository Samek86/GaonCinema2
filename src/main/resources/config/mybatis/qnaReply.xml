<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="qnaReply">
	
	<!-- 댓글 목록 가져오기 -->
	<select id="selectQnaReply" parameterType="int" resultType="com.gaon.cinema.qnaReply.QnaReplyDTO">
		select * from gc_qna_reply where qna_id = #{qna_id}
	</select>
	
	<!-- 댓글 등록 -->
	<insert id="addQnaReply" parameterType="com.gaon.cinema.qnaReply.QnaReplyDTO">
		insert into gc_qna_reply values (#{qna_id}, #{userid}, #{contents}, sysdate)
	</insert>
	
	<!-- 댓글 수정 -->
	<update id = "replyedit" parameterType="com.gaon.cinema.qnaReply.QnaReplyDTO"> 
		update gc_qna set title = #{userid}, contents = #{contents}, wdate = sysdate
		where qna_id = #{qna_id}
	</update>
	
	<!-- 댓글 삭제 -->
	<delete id = "replydelete" parameterType="int">
		delete from gc_qna where qna_id =#{qna_id}
	</delete>
	
</mapper>

